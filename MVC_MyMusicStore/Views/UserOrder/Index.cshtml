@model IEnumerable<MVC_MyMusicStore.Models.CartModels.OrderDetail>
<div style="display:flex;color:white" class="mb-3">
    <a onclick="history.go(-1)" class="btn btn-link"><i class="fa-solid fa-angles-left" style="color:white; font-size:1.5rem"></i></a>
    <h2>My Orders</h2>
</div>
<table class="table table-hover" style="background:white">
    <thead>
    <th>Name</th>
    <th>Album</th>
    <th>Price</th>
    <th>Order Date</th>
    <th>Address</th>
    <th class="bg-warning">Status</th>
    </thead>
    <tbody>
        @if(Model != null)
        {
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.Order.FirstName @i.Order.LastName</td>
                    <td>@i.Album.Title</td>
                    <td>@i.Album.Price</td>
                    <td>@i.Order.OrderDate</td>
                    <td>@i.Order.Address</td>
                    <td class="bg-warning">@i.Order.Status</td>
                    
                </tr>
                
            }
        }
        

    </tbody>
    
</table>