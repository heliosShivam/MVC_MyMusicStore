@model IEnumerable<MVC_MyMusicStore.Models.Album>

<div class="container flex-row justify-content-between">
    <h3>Albums</h3>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Genre.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Artist.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AlbumId" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.AlbumId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>