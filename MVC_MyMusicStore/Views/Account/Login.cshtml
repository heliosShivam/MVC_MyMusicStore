@using MVC_MyMusicStore.Models.UserModels
@model Login;    

@{
    ViewBag.Title = "Login";
}

<div class="row flex justify-content-center">
    <div class="col-md-4">
        <div class="card" style="color:white; background-color:#4047d5">
        <h4 class="card-header">Login</h4>

        <div class="card-body">
            <form asp-action="Login" method="post" class="form">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="mb-1">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                
                <div class="mb-1">
                    <label asp-for="Password"></label>
                        <div class="input-group">
                             <input asp-for="Password" class="form-control" id="password" />
                               <div class="input-group-append">
                                   <button type="button" class="btn btn-dark" onclick="togglePasswordVisibility()"><i class="fa fa-eye" style="color:white"></i></button>
                               </div>
                        </div>
                     <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-1 form-check">
                    <label class="form-check-label">
                        <input asp-for="RememberMe" class="form-check-input"/>@Html.DisplayNameFor(a => a.RememberMe)
                    </label>
                </div>
                <div class="d-grid gap-2 col-6 mx-auto">
                   <div class="row">
                            <input type="submit" value="Login" class="btn text-light" style="background:#171718"/>
                   </div>
                   
                   <div class="row">
                        <p>Don't have an account?</p>
                        <a class="btn btn-secondary" asp-action="Register">Register</a>
                   </div>
                        <div class="row" style="text-align:center">

                            <a asp-action="GetResetLink" style="text-decoration:none; color:white">Forget Password?</a>
                   </div>
                </div>

            </form>
        </div>
    </div>
    </div>
    </div>
<script>
    function togglePasswordVisibility() {
        var passwordInput = document.getElementById('password');
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
        } else {
            passwordInput.type = 'password';
        }
    }
</script>

    @section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }

    }