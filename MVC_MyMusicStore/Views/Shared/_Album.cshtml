@model List<MVC_MyMusicStore.Models.Album>


 
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="card m-3 p-0" style="width: 18rem; height:25em; background:#4047d5; color:white; border-radius:5px;">
                    <img src="@item.AlbumImgUrl" class="card-img-top" style="height:15rem;border-radius:5px 5px 0 0; " alt="@item.Title">

                    <div class="card-body">
                        <a asp-action="Details" asp-controller="Store" asp-route-id="@item.AlbumId" style="color:white ; text-dlecoration:none"><h5 class="card-title"> @item.Title</h5></a>

                        <p class="card-text">Price : $@item.Price</p>

                        <p class="btn btn-light">
                            <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-id="@item.AlbumId" style="color:black ; text-decoration:none">Add to cart</a>
                        </p>
                    </div>

                </div>
            }
        </div>
 